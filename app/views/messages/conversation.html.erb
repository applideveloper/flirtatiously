<script type="text/template" id="new-message-wrapper">
  <li class="object-item group">
    <div class="object-avatar">

        <%= display_photo(current_user.profile, :avatar) %>
    </div>
    <section class="object-content">


      <%= current_user.username %>

      <div class="status-body">


      <%%= message.body %>

      </div>

      <div class="status-timestamp">
       Now
      </div>
    </section>
  </li>
</script>


<script>
$('.create-pm').on('ajax:success', function(e,d) {

  var newMsgFn = _.template($('#new-message-wrapper').html());

  $('.objects-list').append(newMsgFn({message: d}))
  $('.create-pm textarea').val('');
})

</script>


