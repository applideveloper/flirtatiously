<h3> Search </h3>

<form action="<%= user_filter_url %>" method="post">
  <%= auth_token_input %>
  <input type="hidden" name="_method" value="put">

  <input type="text" name="user_filter[beg_age]" value="<%= @user_filter.beg_age %>">

  to

  <input type="text" name="user_filter[end_age]" value="<%= @user_filter.end_age %>">

  years old |

  <select name="user_filter[sexual_orientation]">

    <% PROFILE_DETAILS["sexual_orientation"].each do |k, v| %>
  <option value="<%= k %>" <%= "selected" if @user_filter.sexual_orientation == k %>><%= v %></option>

    <% end %>
    <option value="-1" <%= "selected" if @user_filter.sexual_orientation == "-1" %>>All</option>
  </select>


  <select name="user_filter[sex]" >


  <% PROFILE_DETAILS["sex"].each do |k, v| %>
  <option value="<%= k %>" <%= "selected" if @user_filter.sex == k %>><%= v %></option>

  <% end %>

  <option value="-1" <%= "selected" if @user_filter.sex == "-1" %>>Everyone</option>

  </select> | <input type="text" name="user_filter[distance]" value="<%= @user_filter.distance %>"> miles away


  <input type="submit" value="Refresh">

</form>

<h3> Profiles </h3>

<ul class="profiles-list group">
  <%= paginate @profiles %>

  <% @profiles.each do |profile| %>
  <li><%= image_tag(profile.big_photo.url, class: 'profile-avatar', height: '100%', width: '100%') if profile.big_photo.exists? %>

    <div class="profile-content">
  	<%= link_to profile.user.username, profile_url(profile) %><br>
    <%= age(profile.birthday) %> Â· <%= profile.city %><br>

    <% percentages = current_user.calculate_percentages(profile.user) %>
    <%= print_percentages(percentages) %><br>
  </div>

  </li>
  <% end %>
</ul>



